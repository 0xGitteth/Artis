rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isVerifiedUser() {
      return request.auth != null && request.auth.token.email_verified == true;
    }
    function isModerator() {
      return request.auth != null
        && request.auth.token.email_verified == true
        && request.auth.token.email != null
        && firestore.exists(/databases/(default)/documents/config/moderation)
        && request.auth.token.email in firestore.get(/databases/(default)/documents/config/moderation).data.moderatorEmails;
    }

    match /uploads/{userId}/{allPaths=**} {
      allow read: if isModerator() || (request.auth != null && request.auth.uid == userId);
      allow write: if isVerifiedUser() && request.auth.uid == userId;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
